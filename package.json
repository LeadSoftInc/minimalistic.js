{
  "name": "minimalistic-js",
  "version": "1.1.3",
  "description": "Cross-platform simple validation",
  "license": "ISC",
  "scripts": {
    "start": "rimraf ./dist && babel -d ./dist ./src -s && node ./dist/index.js",
    "watch": "rimraf ./dist && babel --watch -d ./dist ./src -s && node ./dist/index.js",
    "lint:js": "eslint .",
    "lint-staged": "lint-staged"
  },
  "keywords": [
    "validation",
    "simple validation",
    "js validation",
    "custom validation",
    "reg validation",
    "nodejs validation",
    "node validation",
    "node.js validation",
    "react"
  ],
  "author": "leadsoft",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/LeadSoftInc/minimalistic.js.git"
  },
  "homepage": "https://github.com/LeadSoftInc/minimalistic.js",
  "bugs": {
    "url": "https://github.com/LeadSoftInc/minimalistic.js/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-0": "^6.22.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-config-prettier": "^1.5.0",
    "eslint-plugin-import": "^2.2.0",
    "lint-staged": "^3.4.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "lint:js"
  }
}
